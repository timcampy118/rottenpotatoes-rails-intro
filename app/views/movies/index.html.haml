-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th {:class=>("hilite" if @sortedCol == "title")} = link_to 'Movie Title', movie_path(:sort_by=>'Title'), :id=>"title_header"
      %th Rating
      %th {:class=>("hilite" if @sortedCol == "release_date")} = link_to 'Movie Title', movie_path(:sort_by=>'Release Date'), :id=>"release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
